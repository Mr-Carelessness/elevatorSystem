    <view class="indinfo">
      <text style="font-size:14px; color:#495060;">安全管理制度：</text>
      <wux-rater font-size="{{ 20 }}" activeColor="{{color.ind1}}" controlled="true" value="{{ind.ind1}}" disabled />
      <text style="color:{{color.ind1}}; margin-left:5px;">{{ind.ind1}}</text>
    </view>
    <view class="indinfo">
      <text style="font-size:14px; color:#495060;">安全技术档案：</text>
