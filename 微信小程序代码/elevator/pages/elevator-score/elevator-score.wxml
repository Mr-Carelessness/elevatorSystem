<!--pages/elevator-score/elevator-score.wxml-->
<view>
  <view style="margin-top:5px; margin-bottom:20px;">
    <i-card title="{{name}}">
        <view slot="content">得分：<text style="font-size:24px; color:{{color.score}}; font-weight:900;">{{score}}</text></view>
        <view slot="footer">提示：<text style="color:{{color.score}};">{{hint}}</text></view>
    </i-card>
  </view>
  
  

  <view style="font-size:15px; color:#1c2438; font-weight:900; margin-left:10px;">以下为该电梯的得分详情：</view>
