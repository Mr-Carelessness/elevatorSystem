/* pages/task/task.wxss */

 
.canlendarBgView {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 20rpx;
}
 
.canlendarView {
  font-weight: 900;
  display: flex;
  flex-direction: column;
  border: dashed #5cadff 1px;
}
 
.canlendarTopView {
  height: 80rpx;
  font-size: 14px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #2b85e4;
  color: #f8f8f9;
}
 
.leftBgView {
  text-align: right;
  height: 80rpx;
  display: flex;
  flex-direction: row-reverse;
}
 
.leftView {
  width: 80rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
 
.centerView {
  width: 50%;
  height: 80rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
 
.rightBgView {
  height: 80rpx;
  display: flex;
  flex-direction: row;
}
 
.rightView {
  width: 80rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
 
.weekBgView {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 12px;
  opacity: 0.8;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-weight: 900;
}
 
.weekView {
  flex-grow: 1;
  text-align: center;
  font-size: 28rpx;
  color: #2b85e4;
  font-weight: 900;
}
 
.dateBgView {
  height: 350rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
 
.dateEmptyView {
  width: 101.4285714286143rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
 
.dateView {
  width: 101.4285714286143rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
 
.datesView {
  width: 60rpx;
  height: 60rpx;
  color: #80848f;
  font-size: 26rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}
 
.dateSelectView {
  border-radius: 50%;
  position: relative;
  left: 0;
  top: 0;
  color: #fff;
  background-color: #2b85e4;
  font-weight: 700;
}

.taskPanel{
  margin: auto 20rpx;
}
.i-card{
  margin:10rpx 4px;
  font-size:14px;
  overflow:hidden;
  position:relative;
  background:#fff;
  border:1rpx solid #dddee1;
  border-radius:5px;
}
.i-card-full{
  margin:0;
  border-left:none;
  border-right:none;
  border-radius:0
}
.taskLeft{
  margin:25rpx 5rpx 10rpx 25rpx;
  height:200rpx;
  width:485rpx;
  float:left; 
  color:#495060; 
  font-size:12px;
}